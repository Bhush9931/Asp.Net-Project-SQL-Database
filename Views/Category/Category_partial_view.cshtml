@model Crud_Opration_product.Models.Categeory_Model
<body class="bg-primary">
    @using (Html.BeginForm("SaveOrupdate", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-3">
                <div class="form-group ">
                    <label class="small mb-1 ">Category Name <small style="color:red">*</small></label>
                    @Html.HiddenFor(m => m.categeory_id)
                    @Html.TextBoxFor(m => m.categeory_Name, new { @class = "form-control ", autofocus = "autofocus", tabindex = "2" })
                    @Html.ValidationMessageFor(m => m.categeory_Name, "", new { @class = "text-danger  " })
                </div>
            </div>
            <div class="form-group mt-4 mb-0 form-actions">
                <button type="submit" class="btn btn-dark" id="btnsubmit"> Save Record </button>
            </div>
        </div>

    }
</body>
